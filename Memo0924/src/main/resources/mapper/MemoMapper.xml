<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.du.memo0924.mapper.MemoMapper">
    <select id="findAll" resultType="Memo">
        select * from memo order by id desc
    </select>

    <select id="findById" resultType="Memo">
        select * from memo where id = #{id}
    </select>

    <insert id="insert" parameterType="Memo" useGeneratedKeys="true" keyProperty="id">
        insert into memo(title, content)
        values (#{title}, #{content})
    </insert>

    <update id="update" parameterType="Memo">
        update memo
        set title = #{title},
            content =  #{content}
        where id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        delete from memo where id = #{id}
    </delete>

</mapper>